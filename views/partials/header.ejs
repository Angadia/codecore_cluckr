<header class="header">
    <div class="branding">
      <a href="/"><img src="/assets/cluckr_logo.jpg" alt="Cluckr Logo" class="logo"></a>
    </div>
    <nav class="nav">
      <ul class="menu">
        <li>
            <form action="/clucks/new" method="GET">
              <input type="submit" value="Cluck!">
            </form>
        </li>
        <% if (cluckrData["loggedInUsername"]) { %>

          <li><label class="lbl_header_username"><%= cluckrData["loggedInUsername"] %></label></li>
          <li>
            <form action="/sign_out" method="POST">
              <input type="submit" value="Sign Out">
            </form>
          </li>
          
        <% } else { %>
 
          <li>
            <form action="/sign_in" method="GET">
              <input type="submit" value="Sign In">
            </form>
          </li>
        <% } %>
        
      </ul>
    </nav>
</header>